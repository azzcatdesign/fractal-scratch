  <colgroup>
    <col class="table__col">
    <col class="table__col">
    <col class="table__col table__col--actions">
  </colgroup>

  <thead>
    <tr>
      <th class="table__cell table__cell--head">Options</th>
      <th class="table__cell table__cell--head">Display</th>
      <th class="table__cell table__cell--head table__cell--actions">

        {{> '@table-actions--add'}}

      </th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td class="table__cell">Qualifying Offer</td>
      <td class="table__cell">Yes</td>
      <td class="table__cell table__cell--actions">

